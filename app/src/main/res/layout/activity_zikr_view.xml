<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainFGColor"
    tools:context=".Zikr_view_Activity">

    <TextView
        android:id="@+id/txtZikrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/sarchia_hawin"
        android:text="zikr id"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/zRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/layout_animaition_fall_down"
        android:background="@drawable/backgrownd_sura"
        />

</LinearLayout>